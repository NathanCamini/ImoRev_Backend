generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Locador
model UsuarioPadrao {
  id                String   @id @unique @default(uuid())
  email             String   @unique
  senha             String
  telefone          String
  genero            String
  estado_civil      String
  data_nascimento   DateTime
  nome_completo     String
  permissao         ROLE
  imagem_link       String?
  inscricao_federal String

  endereco   Endereco @relation("enderecoUsuario", fields: [enderecoId], references: [id])
  enderecoId String   @unique

  criado_em     DateTime  @default(now())
  atualizado_em DateTime? @updatedAt

  @@map("usuario_padrao")
}

model Endereco {
  id          String  @id @default(uuid())
  rua         String
  numero      Int
  complemento String?
  cidade      String
  bairro      String
  uf          String
  cep         String

  criado_em     DateTime        @default(now())
  atualizado_em DateTime?       @updatedAt
  propriedades  Propriedades[]  @relation("enderecoPropriedade")
  usuario       UsuarioPadrao[] @relation("enderecoUsuario")

  @@map("endereco")
}

model Propriedades {
  id             String       @id @unique @default(uuid())
  tipo           TYPEPROPERTY
  valorAvaliacao Float
  valorAluguel   Float

  criado_em     DateTime  @default(now())
  atualizado_em DateTime? @updatedAt

  endereco   Endereco @relation("enderecoPropriedade", fields: [enderecoId], references: [id], onDelete: Cascade)
  enderecoId String   @unique
  links      String[]

  @@map("propriedades")
}

enum ROLE {
  ADMIN
  IMOBILIARIA
  LOCADOR
  LOCATARIO
}

enum TYPEPROPERTY {
  CASA
  APARTAMENTO
  TERRENO
  COMERCIAL
}
